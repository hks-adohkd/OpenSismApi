@model DBContext.Models.Prize

@{
ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Details</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <dl class="dl-horizontal">
                            <dt>
                                Icon
                            </dt>
                            <dd>
                                <img class="img-responsive img-bordered img-lg" src="@Model.ImageUrl" />
                            </dd>
                        </dl>
                        <div class="clearfix"></div>
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.DisplayNameAr)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DisplayNameAr)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.DisplayName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DisplayName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.DescriptionAr)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DescriptionAr)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Points)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Points)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.PrizeType)
                            </dt>
                            <dd>
                                <a class="badge badge-info" target="_blank" asp-action="Details" asp-controller="PrizeTypes" asp-route-id="@Model.PrizeTypeId">
                                    @Html.DisplayFor(model => model.PrizeType.DisplayName)
                                </a>
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Created)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Created)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Modified)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Modified)
                            </dd>
                        </dl>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</section>
