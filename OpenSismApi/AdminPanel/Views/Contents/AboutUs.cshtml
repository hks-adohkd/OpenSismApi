@model DBContext.Models.Content

@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Edit</h3>
                    </div>
                    <form asp-action="AboutUs">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Script)
                                <div class="mb-3">
                                    <textarea class="textarea" name="Script" placeholder="Place some text here"
                                              style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">@Model.Script</textarea>
                                </div>
                                <p class="text-sm mb-0"></p>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ScriptAr)
                                <div class="mb-3">
                                    <textarea class="textarea" name="ScriptAr" placeholder="Place some text here"
                                              style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">@Model.ScriptAr</textarea>
                                </div>
                                <p class="text-sm mb-0"></p>
                            </div>

                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">Submit</button>
                            <a class="btn btn-default float-right" asp-action="Index">
                                Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

