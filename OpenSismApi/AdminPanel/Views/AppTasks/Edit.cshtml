@model DBContext.Models.AppTask

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Edit</h3>
                    </div>
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div class="card-body">
                            @{
                                string displayPackageName = "none", displayPageId = "none",
                                    displayVedioId = "none", displayVedioInputs = "none";
                                if (Model.TaskType.Name == "install_app")
                                {
                                    displayPackageName = "block";
                                }
                                if (Model.TaskType.Name == "like_facebook_page" || Model.TaskType.Name == "like_instagram_page"
                                    || Model.TaskType.Name == "follow_twitter")
                                {
                                    displayPageId = "block";
                                }
                                if (Model.TaskType.Name == "youtube_subscribe")
                                {
                                    displayVedioId = "block";
                                }
                                if (Model.TaskType.Name == "watch_ad")
                                {
                                    displayVedioInputs = "block";
                                }
                            }
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @if (Model.TaskType.Name != "share_games_app")
                            {
                                <div class="form-group">
                                    <label asp-for="TaskTypeId" class="control-label"></label>
                                    <select asp-for="TaskTypeId" id="TaskTypeId" class="form-control" asp-items="ViewBag.TaskTypeId">
                                        <option value="0">Select Type</option>
                                    </select>
                                    <span asp-validation-for="TaskTypeId" class="text-danger"></span>
                                </div>
                            }
                            else
                            {
                                <input type="hidden" asp-for="TaskTypeId" />
                            }
                            <div class="form-group">
                                <label asp-for="ImageUrl" class="control-label"></label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" name="file" class="custom-file-input">
                                        <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                                    </div>
                                </div>
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DisplayNameAr" class="control-label"></label>
                                <input asp-for="DisplayNameAr" class="form-control" />
                                <span asp-validation-for="DisplayNameAr" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DisplayName" class="control-label"></label>
                                <input asp-for="DisplayName" class="form-control" />
                                <span asp-validation-for="DisplayName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DescriptionAr" class="control-label"></label>
                                <input asp-for="DescriptionAr" class="form-control" />
                                <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Link" class="control-label"></label>
                                <input asp-for="Link" class="form-control" />
                                <span asp-validation-for="Link" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TutorialLink" class="control-label"></label>
                                <input asp-for="TutorialLink" class="form-control" />
                                <span asp-validation-for="TutorialLink" class="text-danger"></span>
                            </div>
                            <div class="form-group" id="VedioFileDiv" style="display:@displayVedioInputs;">
                                <label asp-for="Link" class="control-label"></label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" name="vedioFile" class="custom-file-input">
                                        <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                                    </div>
                                </div>
                                <span asp-validation-for="Link" class="text-danger"></span>
                            </div>
                            @if (Model.TaskType.Name != "share_games_app")
                            {
                                <div class="form-group">
                                    <label asp-for="StartDate" class="control-label"></label>
                                    <input type="datetime" asp-for="StartDate" value="@Model.StartDate" class="form-control datetimepicker" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="EndDate" class="control-label"></label>
                                    <input type="datetime" asp-for="EndDate" value="@Model.EndDate" class="form-control datetimepicker" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            }
                            else
                            {
                                <input type="hidden" asp-for="StartDate" />
                                <input type="hidden" asp-for="EndDate" />
                            }

                            <div class="form-group">
                                <label asp-for="Points" class="control-label"></label>
                                <input asp-for="Points" class="form-control" />
                                <span asp-validation-for="Points" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Limit" class="control-label"></label>
                                <input asp-for="Limit" class="form-control" />
                                <span asp-validation-for="Limit" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="col-12">
                                    <div class="icheck-primary">
                                        @Html.CheckBoxFor(model => model.Stared)
                                        @Html.LabelFor(model => model.Stared)
                                    </div>
                                </div>
                            </div>


                            <div class="form-group" id="PackageNameDiv" style="display:@displayPackageName;">
                                <label asp-for="PackageName" class="control-label"></label>
                                <input asp-for="PackageName" id="PackageNameInput" class="form-control" />
                                <span asp-validation-for="PackageName" class="text-danger"></span>
                            </div>
                            <div class="form-group" id="PageIdDiv" style="display:@displayPageId;">
                                <label asp-for="PageId" class="control-label"></label>
                                <input asp-for="PageId" id="PageIdInput" class="form-control" />
                                <span asp-validation-for="PageId" class="text-danger"></span>
                            </div>
                            <div class="form-group" id="VedioIdDiv" style="display:@displayVedioId;">
                                <label asp-for="VedioId" class="control-label"></label>
                                <input asp-for="VedioId" id="VedioIdInput" class="form-control" />
                                <span asp-validation-for="VedioId" class="text-danger"></span>
                            </div>
                            <div class="form-group" id="VedioDurationDiv" style="display:@displayVedioInputs;">
                                <label asp-for="VedioDuration" class="control-label"></label>
                                <input asp-for="VedioDuration" id="VedioDurationInput" class="form-control" />
                                <span asp-validation-for="VedioDuration" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="col-12">
                                    <div class="icheck-primary">
                                        @Html.CheckBoxFor(model => model.IsDeleted)
                                        @Html.LabelFor(model => model.IsDeleted)
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Created" />
                            @*<input type="hidden" asp-for="IsDeleted" />*@
                            <input type="hidden" asp-for="ImageUrl" />
                            <input type="hidden" asp-for="IsForAll" />
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">Submit</button>
                            <a class="btn btn-default float-right" asp-action="Index">
                                Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

