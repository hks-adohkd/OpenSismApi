@model DBContext.Models.CustomerMessage

@{
    ViewData["Title"] = "Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Send Message</h3>
                    </div>
                    <form asp-action="Message">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Message.TitleAr" class="control-label"></label>
                                <input asp-for="Message.TitleAr" class="form-control" />
                                <span asp-validation-for="Message.TitleAr" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Message.Title" class="control-label"></label>
                                <input asp-for="Message.Title" class="form-control" />
                                <span asp-validation-for="Message.Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Message.ScriptAr" class="control-label"></label>
                                <input asp-for="Message.ScriptAr" class="form-control" />
                                <span asp-validation-for="Message.ScriptAr" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Message.Script" class="control-label"></label>
                                <input asp-for="Message.Script" class="form-control" />
                                <span asp-validation-for="Message.Script" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="Message.IsForAll" value="False" />
                            <input type="hidden" asp-for="CustomerId" value="@ViewBag.customerId" />

                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Send</button>
                            <a class="btn btn-default float-right" asp-action="Index">
                                Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

