@model DBContext.Models.Customer

@{
    ViewData["Title"] = "Lock out";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">Are you sure you want to lock out this user for three years?</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.FirstName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.LastName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.LastName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.ImageUrl)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.ImageUrl)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Group)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Group.DisplayName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.TermsAndConditions)
                            </dt>
                            <dd>
                                @if ((bool)Model.TermsAndConditions)
                                {
                                    <span>Agreed</span>
                                }
                                else
                                {
                                    <span>Didn't Agree</span>
                                }
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Gender)
                            </dt>
                            <dd>
                                @if ((bool)Model.Gender)
                                {
                                    <span>Female</span>
                                }
                                else
                                {
                                    <span>Male</span>
                                }
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.CurrentPoints)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.CurrentPoints)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.TotalPoints)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.TotalPoints)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.LuckyWheelLastSpinDate)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.LuckyWheelLastSpinDate)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.User.PhoneNumber)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.User.PhoneNumber)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.City)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.City.DisplayName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Created)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Created)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Modified)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Modified)
                            </dd>
                        </dl>
                    </div>
                    <div class="card-footer">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Lock out" class="btn btn-danger" />
                            <a class="btn btn-default" asp-action="Index">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
