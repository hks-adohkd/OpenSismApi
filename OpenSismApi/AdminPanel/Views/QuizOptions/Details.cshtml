@model DBContext.Models.QuizOption

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Details</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.ScriptAr)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.ScriptAr)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Script)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Script)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.IsRightOption)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.IsRightOption)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.ItemOrder)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.ItemOrder)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Quiz)
                            </dt>
                            <dd>
                                <a class="badge badge-info" target="_blank" asp-action="Details" asp-controller="Quizs" asp-route-id="@Model.QuizId">
