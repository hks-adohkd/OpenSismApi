@model DBContext.Models.QuizIndex

@{
ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">Are you sure you want to delete this?</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.AppTaskId)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CustomerId)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Index)
                        </dt>
                        
                        <dt>
                            @Html.DisplayNameFor(model => model.Created)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Created)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Modified)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Modified)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.IsDeleted)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.IsDeleted)
                        </dd>
                    </dl>
                    </div>
                    <div class="card-footer">
                        <form asp-action="DeleteIndex">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a class="btn btn-default" asp-action="CustomerIndex" asp-route-id="@ViewBag.AppTaskId" >Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
