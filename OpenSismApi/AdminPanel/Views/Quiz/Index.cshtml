@model IEnumerable<DBContext.Models.Quiz>
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <a asp-action="Create" asp-route-appTaskId="@ViewBag.AppTaskId" ><i class="fas fa-plus-circle"></i> Add new record</a>
                        </h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-striped" id="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ItemOrder)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ScriptAr)
                                    </th>
                                    <th>

                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
      var controllerName = '@HttpContextAccessor.HttpContext.Session.GetString("ControllerName")';
    var AppTaskId = '@ViewBag.AppTaskId';
    
    //debugger;
    var optionsControllerName = 'QuizOptions';

