@model DBContext.Models.MessageGroup

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Create</h3>
                    </div>
                    <form asp-action="Create">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="MessageId" value="@ViewBag.MessageId" />
                            <div class="form-group">
                                <label asp-for="GroupId" class="control-label"></label>
                                <select asp-for="GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Submit</button>
                            <a class="btn btn-default float-right" asp-action="Index" asp-route-id="@ViewBag.MessageId">
                                Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

